################################################################################
#                              CONFIGURATION                                   #
################################################################################

NAME			= ðŸ…ŸðŸ…žðŸ…›ðŸ…¨ðŸ…œðŸ…žðŸ…¡ðŸ…ŸðŸ…—ðŸ…˜ðŸ…¢ðŸ…œ
CC				= c++
CFLAGS = -Wall -Wextra -Werror -Wno-shadow -std=c++98 -MMD
DEPFLAGS		= -MMD -MF $(DEPDIR)/$*.d

SRCDIR			= src
OBJDIR			= obj
DEPDIR			= deps

################################################################################
#                              SOURCE FILES                                    #
################################################################################

SRCS = main.cpp	\
	   Animal.cpp\
	   Cat.cpp \
	   Dog.cpp

HEADERS = Animal.hpp \
		  Cat.hpp	\
		  Dog.hpp
################################################################################
#                             OBJECTS & DEPS                                   #
################################################################################

OBJS			= $(SRCS:%.cpp=$(OBJDIR)/%.o)
DEPS			= $(OBJS:%.o=$(DEPDIR)/%.d)

################################################################################
#                              RULES                                           #
################################################################################

all: dir $(NAME)

$(NAME): Makefile $(OBJS)
	@$(CC) $(CFLAGS) $(OBJS) -o $@
	@echo "\033[1;32m âžœ âžœ CPP03 EX02 [âœ”]\033[0m"


$(OBJDIR)/%.o: %.cpp $(HEADERS)
	@mkdir -p $(dir $@) $(dir $(DEPDIR)/$*.d)
	@$(CC) $(CFLAGS) $(DEPFLAGS) $(INCLUDE) -c $< -o $@

dir:
	@mkdir -p $(OBJDIR) $(DEPDIR)

clean:
	@rm -rf $(OBJDIR) $(DEPDIR)
	@echo "\033[1;32m â™» CHAUUU â™»\033[0m"

fclean: clean
	@rm -f $(NAME)

re: fclean all

-include $(DEPS)

.PHONY: all clean fclean re dir
